<div class="buffer"></div>
<div class="main">
  {{!-- DISCUSSION BOARD NAVIGATION --}}
  <div class="discussion-board-nav">
    <button class="start-discussion-btn">Start Discussion</button>
    <ul class="discussion-nav-tags">
      <li><a href="#"><i class="fa-solid fa-comments" id="general-disc"></i> General Discussion</a></li>
      <li><a href="#"><i class="fa-solid fa-user-group" id="lft"></i> LFT</a></li>
      <li><a href="#"><i class="fa-solid fa-wrench" id="tech-issues"></i> Technical Issues</a></li>
      <li><a href="#"><i class="fa-solid fa-comment-dots" id="off-topic"></i> Off Topic</a></li>
    </ul>
  </div>

  {{!-- DISCUSSION BOARD (POSTS) --}}
  <div class="discussion-board">

    {{!-- filter button --}}
    <div class="filter-menu">
      <div class="select-filter"><span class="selected-filter">Newest</span> ‚è∑</div>
      <div class="filters">
        <div class="filter"><a href="#"><div class="filter-text">Newest</div></a></div>
        <div class="filter"><a href="#"><div class="filter-text">Oldest</div></a></div>
        <div class="filter"><a href="#"><div class="filter-text">Hottest</div></a></div>
      </div>
    </div>

  {{!-- INDIVIDUAL POST --}}
  <div class="indiv-post">
    {{!-- post --}}
  </div>

  <br>
  {{!-- WRITE POST --}}
  <div class="write-post-border">
    <div class="write-post">
      <div class="write-post-left">
        <img src="/static/images/fade-icon.png" class="write-pfp">
      </div>
      <div class="write-post-right">
        {{!-- discussion tags and exit --}}
        <div class="write-post-tags">
          <div class="tag-menu">
            <div class="select-tag"><span class="selected-tag">Choose Tags</span></div>
            <div class="tags">
              <div class="tag"><a href="#"><div class="tag-text">General Discussion</div></a></div>
              <div class="tag"><a href="#"><div class="tag-text">LFT</div></a></div>
              <div class="tag"><a href="#"><div class="tag-text">Technical Issues</div></a></div>
              <div class="tag"><a href="#"><div class="tag-text">Off Topic</div></a></div>
            </div>
          </div>
          <div class="close-post">x</div>
        </div>
        
        {{!-- discussion inputs --}}
        <div class="write-content-div">
          <input type="text" class="post-title" placeholder="Discussion Title" /><br>
          <textarea class="post-caption" rows="7" placeholder="Write a Post..." required></textarea>
        </div>
      </div>
    </div>
    <div class="submit-post">
      <input class="submit-btn" type="submit" value="Plant the Spike" />
    </div>
  </div>

  {{!-- POSTS--}}
  <div class="posts">
    <div class="individual-post">
      <div class="post-votes">
        <button class="vote-btn" onclick="upvote()"><i class="fa-solid fa-arrow-up" id="upvote"></i></button><br>
        2
        <button class="vote-btn" onclick="downvote()"><i class="fa-solid fa-arrow-down" id="downvote"></i></button>
      </div>
      <div class="post-content">
        <div class="post-header">
          <div class="post-pfp-container"><img src="/static/images/fade-icon.png" class="post-pfp"></div>
          <ul class="post-details">
            <li class="details">
              <ul class="inline">
                <li id="post-title">Title</li>
                <li id="post-edit">Edited</li>
                <li id="post-tag"><img src="/static/images/default-1.png" height="13px" width="13px"> General Discussion</li>
                <li id="post-comment"><i class="fa-solid fa-comment" id="comment-icon"></i> 2</li>
              </ul>
            </li>
            <li class="subdetails">
              <ul class="inline">
                <li id="post-username">@username &nbsp;</li>
                <li id="post-time">started this discussion on $date $time</li>
              </ul>
            </li>
          </ul>
        </div>
        <div class="post-description">
          lorem ipsum
        </div>
      </div>
    </div>
  </div>

  </div>
</div>

