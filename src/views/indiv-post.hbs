<link rel="stylesheet" href="/static/css/indiv-post.css" />
<script src="/static/js/indiv-post.js" defer></script>

<div class="main-header">
        <div class="post-tag">
            <img src="images/default-1-red.png" height=13px width=13px>
            {{tag}}
        </div>
        <div class="title">{{title}}</div>
    </div>
    <div class="main">
      <span class="post-container">
         <div class="post-item">
           <span class="post-votes">
            <button class="votes" onclick="upvote()"><i
                class="fa-solid fa-arrow-up"
                id="upvote"
              ></i></button>
            <br />
            <p class="vote-cnt">{{upvotes}}</p>
            <button class="votes" onclick="downvote()"><i
                class="fa-solid fa-arrow-down"
                id="downvote"
              ></i></button>
          </span>
          <img class="pfp" src="/static/images/fade-icon.png" height="60px" width="60px" />
          <span class="post-content">
            
            {{!-- <span class="post-content-top"> --}}
              <!-- TO DO: retrieve images of user in users database and put it here -->
              <span class="details">
                <div class="top-row">
                  <p id="postid">post id:{{id}}</p>
                  {{!-- <span class="title"><a href="/post/{{_id}}">{{title}}</a></span> --}}
                  <!-- TO DO: edited should be enabled based on status -->
                  <span class="edited"><!--Edited--></span>
                  <span class="post-metadata">
                    {{!-- <button class="edit-button">Edit</button> --}}
                    {{!-- <span class="post-tag-indiv"> --}}
                      <!-- TO DO: retrieve default icon for gendisc -->
                      <img src="images/default.jpg" height="13px" width="13px" />
                    {{!-- </span> --}}
                    {{!-- <span class="comment-cnt">
                      <i
                        class="fa-solid fa-comment"
                        id="comment-icon"
                        style="color: #ff4654;"
                      ></i> --}}
                      <!--TO DO: display comment count-->
                    </span>
                  </span>
                </div>
                <span class="status">
                  <span class="username"> <a href="/profile/{{username}}">{{username}}</a></span>
                  started at
                  <span class="post-time">{{date}}</span>
                </span>
              </span>
            <div class="content-text">{{content}}</div>
            <textarea class="content-edit" style="display: none;">{{content}} </textarea>
            <button class="save-button" style="display: none;" action="/saveContent" type="submit">Save</button>
          </span>
         </div>
         <span class="actions">
                <div class="reply"><button onclick="replyToPost()">Reply</button></div>
                <div class="meatballs"><button>Options</button></div>
            </span>
      </span>
      <!-- COMMENT -->
      <div id="comments-container">

      </div>
      <!-- WRITE POST -->
      <div id="popup-container">
            <button class="close-button" onclick="closePopup()">X</button>
            <form id="reply-form" onsubmit="submitReply(event)">
                <div class="reply-title">RE: New Agent Speculations</div>
                <label for="reply-caption"></label>
                <textarea id="reply-caption" rows="12" placeholder="Write a reply..." required></textarea>
                <input id="submit-bttn" type="submit" value="Plant the Spike">
            </form>
        </div>
    </div>
